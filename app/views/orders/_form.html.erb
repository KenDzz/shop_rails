<%= form_for(@order) do |f| %>
<% if @order.errors.any? %>
<div id="error_explanation">
    <h2>
        <%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:
    </h2>

    <ul>
        <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="row">
    <div class="col-sm-8">
        <div class="form-group">
            <label class="title-payment">1. Thông tin người nhận hàng<span class="important"></span></label>
            <%= f.text_field :name, :size => 40,class: "form-control", :placeholder => "Họ tên" %>
        </div>
        <div class="form-group mt-2">
            <label class="title-payment">2. Email<span class="important"></span></label>
            <%= f.text_field :email, :size => 40,class: "form-control", :placeholder => "Email" %>
        </div>
        <div class="form-group mt-2">
            <label class="title-payment">3. Địa chỉ<span class="important"></span></label>
            <%= f.text_area :address, :rows => 3, :cols => 40,class: "form-control", :placeholder => "Địa chỉ cụ thể. VD: số nhà, thôn, xã, phường..." %>
        </div>
    </div>
    <div class="col-sm-4 info-sp">
        <div class="shadow p-3 mb-4 bg-white rounded form-control">
            <p class="text-cart-no-product ml-2 text-uppercase ">Phương thức thanh toán</p>
            <%= f.select(:pay_type, Order::PAYMENT_TYPES, :prompt => 'Chọn hình thức thanh toán') %>
        </div>
        <div class="shadow p-3 mb-2 bg-white rounded">
            <%= f.submit 'Thanh toán',class: "btn btn-danger w-100 btn-payment-d" %>
        </div>
    </div>
</div>
<% end %> 
